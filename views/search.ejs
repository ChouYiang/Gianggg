<!-- search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
    <style>
        /* Add your styling here */
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Kết quả tìm kiếm cho '<%= searchTerm %>'</h1>

    <% if (searchResults.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>ID</th>
                    <th>Tên Sản phẩm</th>
                    <th>Thông tin sản phẩm</th>
                    <th>Giá</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% searchResults.forEach((product, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= product.ID %></td>
                        <td><%= product.Name %></td>
                        <td><%= product.Detail %></td>
                        <td><%= product.Price %>.000 Vnđ</td>
                        <td>
                            <a href="/edit/<%= product.ID  %>">Sửa</a>
                            <a href="/delete/<%= product.ID  %>">Xóa</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>Không tìm thấy kết quả cho '<%= searchTerm %>'.</p>
    <% } %>

    <a href="/">Quay lại danh sách sản phẩm</a>
</body>
</html>
